---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div class="flex flex-col gap-3">
    <h3 class="text-left text-2xl font-medium dark:text-white">{title}</h3>
    <ul
        class="marker:text-purple-700 list-disc text-lg flex flex-wrap flex-row gap-5 lg:flex-col lg:gap-4"
    >
        <slot />
    </ul>
</div>
