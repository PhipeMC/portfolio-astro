---
import { Icon } from "astro-icon";
interface Props {
    title: string;
    body: string;
    stack: string[];
    image: string;
}

const { title, body, stack, image } = Astro.props;
---

<div
    class="shadow-md bg-bgLightSecondary dark:bg-bgDarkSecondary border border-transparent dark:border-sky-900 max-w-xs rounded-xl overflow-hidden"
>
    <img src={image} alt={title} width="320" height="240" />
    <div class="p-5 flex flex-col gap-5 border-t-2 border-primary">
        <div class="flex flex-col gap-1">
            <h3 class="text-primary text-2xl font-semibold">{title}</h3>
            <p class="text-base">
                {body}
            </p>
        </div>
        <div class="flex gap-3 w-full justify-start">
            {
                stack.map((stackTech) => (
                    <Icon name={stackTech} class="w-6 hover:zoom-out" />
                ))
            }
        </div>
    </div>
</div>
